<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title><%=name%></title>
  <meta name="author" content="You">
  <meta name="description" content="A compendium of Harry Potter characters">
  <meta content="text/html" http-equiv="Content-type" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />
  <link rel="stylesheet" href="styles.css">
  <script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
  <%- include ('global/navbar', {data:data});  %>
</head>

<body>
  <span class="border border-3"></span>
  <div class="p-4">

  <header>
    <h1><%=name%></h1>
  </header>
  <section id="charcter-stats">
  <h2>Stats</h2>
  <ul>
    <li>Total Fossil Fuel Emission: <%=stats.TotalFossilFuelEmission%></li>
    <li>Solid Fuel: <%=stats.SolidFuelEmission%></li>
    <li>Gas Fuel: <%=stats.GasFuelEmission%> </li>
    <li>Liquid Fuel: <%=stats.LiquidFuelEmission%></li>
  </ul>
  </section>

<div id="myPlot" style="width:100%;max-width:700px"></div>

<script>
  var data = [
  {
    x: ["Solid Fuel Emission", "Gas Fuel Emission", "Liquid Fuel Emission"],
    y: [<%=stats.SolidFuelEmission%>, <%=stats.GasFuelEmission%>, <%=stats.LiquidFuelEmission%>],
    type: "bar"
  }
];
var layout = {
  title: "<%=name%>'s Fossil Fuel Emission in 2014",
  xaxis: {tickfont: {
      size: 14,
      color: "rgb(107, 107, 107)"
    }},
  yaxis: {
    title: "Metric Tons of Fossil Fuel",
    titlefont: {
      size: 16,
      color: "rgb(107, 107, 107)"
    }
  }
}
var graphOptions = {filename: "basic-bar", fileopt: "overwrite"};
Plotly.newPlot('myPlot', data, layout);
</script>

  <%- include ('global/footer');  %>

</body>

